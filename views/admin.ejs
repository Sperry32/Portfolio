<%var current = ''%>
<% include ./partials/header%>

<div class="container content">
<% if (currentUser.username === "admin") { %>




	<h1 class="text-center">Welcome Back Good Lookin'</h1>

	<div class="container">
		<div class="row">
			<form class = "col text-right" action="/new"> 
				<button class="btn btn-primary align-middle">Add a new project</button>
			</form>

			<form class = "col text-left" action="/logout"> 
				<button class="btn btn-success align-middle">Logout</button>
			</form>
		</div>
	</div>



	<div class="row">
		<% projects.forEach(function(project){ %>
			<br>
			<br>
			<div class="col-sm-12 col-md-6 col-lg-4 fluid">
				<h4><%- project.name %></h4>
				<p><%- project.description %></p>
				<p><%- project.githubURL %></p>
				<a href="/portfolio/<%=project.id%>">
					<img class="img-fluid rounded pb-2" src="<%= project.image %>">
				</a>
				<div class="container">
					<div class="row">
						<form class="col text-right" action="/portfolio/<%=project.id%>/edit"> 
						    <button class="btn btn-warning align-middle">Edit</button>
						</form>
						<form class="col text-left" action="/portfolio/<%= project._id %>?_method=DELETE" method="POST"> 
						    <button class="btn btn-danger align-middle">Delete</button>
						</form>
					</div>
				</div>
			</div>

		<% }) %>
	</div>






<%} else {%>
	<h1 class="text-center">You are not authenticated to view this page!</h1>
	<a href="/" ><button class="btn btn-primary"> Take me Back! </button></a>
<% } %>

</div>

<% include ./partials/footer %>